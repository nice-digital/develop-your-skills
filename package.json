{
  "name": "develop-your-skills",
  "homepage": "https://nice-digital.github.io/develop-your-skills",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@nice-digital/design-system": "^1.0.5-alpha.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "gh-pages": "^3.1.0",
    "node-fetch": "^2.6.0",
    "node-sass": "^4.14.1",
    "query-string": "^6.13.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-markdown": "^4.3.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "yamljs": "^0.3.0"
  },
  "scripts": {
    "start": "npm run get-skills-data && react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=true -i",
    "cov": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "get-skills-data": "node src/scripts/getData.js",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/serviceWorker.js",
      "!src/index.js",
      "!<rootDir>/node_modules/",
      "!<rootDir>/public/",
      "!<rootDir>/coverage/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "coverageReporters": [
      "text"
    ]
  }
}
